<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">


    <TextField id="userNameField" promptText="Enter your username" fx:id="userNameField" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <PasswordField id="passwordField" promptText="Enter your password" fx:id="passwordField" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField id="nameField" promptText="Enter your full name" fx:id="nameField" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField id="email" promptText="Enter your email" fx:id="emailField" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField id="phone #" promptText="Enter your phone number" fx:id="phoneField" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <DatePicker id="datePicker" promptText="Enter your birth date" fx:id="datePicker" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Button id="enterBtn" fx:id="enterBtn" onAction="#btnOnPress" text="Enter" GridPane.columnIndex="0" GridPane.rowIndex="6" />
</GridPane>